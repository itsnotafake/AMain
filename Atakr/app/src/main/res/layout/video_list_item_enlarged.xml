<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_View="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="118dp"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@animator/cardview_raise"
    card_View:cardBackgroundColor="@color/list_cardView_background"
    card_View:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/video_list_image"
            android:layout_width="156dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/video_list_image_CD"
            android:scaleType="centerCrop"
            android:src="@drawable/account_anon_icon" />

        <TextView
            android:id="@+id/video_list_title"
            style="@style/list_normal_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/video_list_image"
            android:layout_toEndOf="@+id/video_list_image"
            android:layout_margin="@dimen/video_list_title_margin"
            android:textSize="@dimen/video_list_title_normal_textsize"
            tools:text="Video Title" />

        <TextView
            android:id="@+id/video_list_enlarged_uploader"
            style="@style/list_enlarged_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_enlarged_text_horizontal_margin"
            android:layout_marginRight="@dimen/list_enlarged_text_horizontal_margin"
            android:layout_marginStart="@dimen/list_enlarged_text_horizontal_margin"
            android:layout_marginEnd="@dimen/list_enlarged_text_horizontal_margin"
            android:layout_below="@+id/video_list_title"
            android:layout_toEndOf="@+id/video_list_image"
            android:layout_toRightOf="@+id/video_list_image"
            tools:text="Uploader" />

        <TextView
            android:id="@+id/video_list_enlarged_views"
            style="@style/list_enlarged_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/list_enlarged_text_horizontal_margin"
            android:layout_marginLeft="@dimen/list_enlarged_text_horizontal_margin"
            android:layout_marginRight="@dimen/list_enlarged_text_horizontal_margin"
            android:layout_marginStart="@dimen/list_enlarged_text_horizontal_margin"
            android:layout_below="@+id/video_list_enlarged_uploader"
            android:layout_toEndOf="@+id/video_list_image"
            android:layout_toRightOf="@+id/video_list_image"
            tools:text="Views" />
    </RelativeLayout>
</android.support.v7.widget.CardView>