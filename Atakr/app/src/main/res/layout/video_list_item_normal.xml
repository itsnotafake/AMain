<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_View="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/video_list_image"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/video_list_image_CD"
            android:scaleType="centerCrop"
            android:src="@drawable/account_anon_icon" />
    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="1dp"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@animator/cardview_raise"
        android:foreground="?android:attr/selectableItemBackground"
        card_View:cardCornerRadius="@dimen/card_corner_radius"
        card_View:cardBackgroundColor="@color/list_cardView_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_list_title"
                style="@style/list_normal_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/video_list_title_margin"
                android:layout_marginStart="@dimen/video_list_title_margin"
                android:layout_marginTop="@dimen/video_list_title_vertical_margin"
                android:layout_weight="1"
                android:textSize="@dimen/video_list_title_normal_textsize"
                tools:text="Video Title" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>