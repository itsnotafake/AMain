<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/video_list_image"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/account_anon_icon"
            android:contentDescription="@string/video_list_image_CD" />
    </FrameLayout>

    <TextView
        android:id="@+id/video_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/video_list_title_margin"
        android:layout_marginStart="@dimen/video_list_title_margin"
        android:textSize="@dimen/video_list_title_normal_textsize"
        style="@style/list_normal_text"
        tools:text="Video Title"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/video_list_play"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/video_list_fab_margin"
        android:layout_marginStart="@dimen/video_list_fab_margin"
        android:layout_marginRight="@dimen/video_list_fab_margin"
        android:layout_marginEnd="@dimen/video_list_fab_margin"
        android:layout_gravity="center"/>
</LinearLayout>